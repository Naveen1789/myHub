package operatingSystems.Scheduling;

public class RoundRobin {
	
	public static int totalWorkToBeDone(int[] runTime){
		int totalWorkLeft = 0;
		for(int i : runTime){
			totalWorkLeft = totalWorkLeft + i;
		}
		
		return totalWorkLeft;
	}
	
